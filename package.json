{
	"name": "sayit-hono",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "npm run build:views && wrangler deploy",
		"deploy:assets": "npm run build:views && npm run build:assets && wrangler deploy",
		"dev": "npm run build:views && wrangler dev --remote",
		"start": "npm run dev",
		"build:views": "tsx --tsconfig scripts/tsconfig.json scripts/build-views.ts",
		"build:assets": "tsx --tsconfig scripts/tsconfig.json scripts/build-assets.ts",
		"preview:assets": "npm run build:assets && python3 -m http.server 4173 -d www",
		"test": "vitest",
		"cf-typegen": "wrangler types"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^24.10.1",
		"@vue/compiler-sfc": "^3.5.25",
		"tsx": "^4.21.0",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.53.0"
	},
	"dependencies": {
		"@vue/server-renderer": "^3.5.25",
		"cheerio": "^1.1.0",
		"hono": "^4.10.7",
		"marked": "^17.0.1",
		"vue": "^3.5.25"
	}
}
